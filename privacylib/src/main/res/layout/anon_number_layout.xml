        android:inputType="number"
        android:text="@string/_8_2" />

    <Button
        android:id="@+id/anon_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/anon">

    </Button>

</LinearLayout>